<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBLE"
        android:layout_width="181dp"
        android:layout_height="125dp"
        android:onClick="switchLocationMode"
        android:text="Discovery Mode"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#CD362B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />

    <Button
        android:id="@+id/buttonInventoryMode"
        android:layout_width="181dp"
        android:layout_height="125dp"
        android:onClick="switchInventoryMode"
        android:text="Identification Mode"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#337836"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBLE"
        app:layout_constraintVertical_bias="0.411" />

</androidx.constraintlayout.widget.ConstraintLayout>